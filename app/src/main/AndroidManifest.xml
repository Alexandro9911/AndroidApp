<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pddexamaplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconnormal"
        android:label="ПДД Теория"
        android:roundIcon="@drawable/iconnormal"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ListQuestActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GetResultActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ExplainListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ExplainedQuestionActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BiletsListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BiletActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".BiletResultActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>